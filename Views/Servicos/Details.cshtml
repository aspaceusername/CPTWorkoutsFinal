@model CPTWorkouts.Models.Servicos

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Servicos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            Treinadores
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var treinador in Model.ListaTreinadores ?? Enumerable.Empty<Treinadores>())
                {
                    <li>
                        <a asp-action="Details"
                           asp-controller="Treinadores"
                           asp-route-id="@Model.Id">
                            @treinador.Nome
                        </a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Retornar</a>
</div>
