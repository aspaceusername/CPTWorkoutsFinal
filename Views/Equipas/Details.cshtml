@model CPTWorkouts.Models.Equipas

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Equipas</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logotipo)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Logotipo))
            {
                <img src="~/Imagens/@Model.Logotipo" alt="Logotipo" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                @Html.DisplayFor(model => model.Logotipo)
            }
        </dd>
    </dl>
</div>

<div>
    <h4>Clientes</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Nome")
                </th>
                <th>
                    @Html.DisplayName("Telemovel")
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListaClientes != null && Model.ListaClientes.Any())
            {
                foreach (var cliente in Model.ListaClientes)
                {
                    <tr>
                        <td>
                            @cliente.Nome
                        </td>
                        <td>
                            @cliente.Telemovel
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">No Clients Available</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
