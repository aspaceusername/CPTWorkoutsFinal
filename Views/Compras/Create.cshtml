@model CPTWorkouts.Models.Compras

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" class="form-control" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorCompraAux" class="control-label"></label>
                <input asp-for="ValorCompraAux" class="form-control" />
                <span asp-validation-for="ValorCompraAux" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClienteFK" class="control-label"></label>
                <select asp-for="ClienteFK" class="form-control" asp-items="@ViewBag.ClienteFK"></select>
                <span asp-validation-for="ClienteFK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServicoFK" class="control-label"></label>
                <select asp-for="ServicoFK" class="form-control" asp-items="@ViewBag.ServicoFK"></select>
                <span asp-validation-for="ServicoFK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
