@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>Registar um novo utilizador</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Input.IsTreinador" id="isTreinadorCheckbox" />
                <label class="form-check-label" asp-for="Input.IsTreinador">Registar como Treinador</label>
            </div>
        </div>
        <div class="col-md-6">
            <div id="treinadorFields" style="display: none;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Treinador.Nome" class="form-control" autocomplete="username" aria-required="true" placeholder="Nome" />
                    <label asp-for="Input.Treinador.Nome">Nome</label>
                    <span asp-validation-for="Input.Treinador.Nome" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Treinador.DataNascimento" class="form-control" aria-required="true" placeholder="Data Nascimento" />
                    <label asp-for="Input.Treinador.DataNascimento">Data Nascimento</label>
                    <span asp-validation-for="Input.Treinador.DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Treinador.Telemovel" class="form-control" aria-required="true" placeholder="Telemóvel" />
                    <label asp-for="Input.Treinador.Telemovel">Telemóvel</label>
                    <span asp-validation-for="Input.Treinador.Telemovel" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.TreinadorID" class="form-control" aria-required="true" placeholder="Treinador ID" />
                    <label asp-for="Input.TreinadorID">Treinador ID</label>
                    <span asp-validation-for="Input.TreinadorID" class="text-danger"></span>
                </div>
            </div>
            <div id="clienteFields">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.Nome" class="form-control" autocomplete="username" aria-required="true" placeholder="Nome" />
                    <label asp-for="Input.Cliente.Nome">Nome</label>
                    <span asp-validation-for="Input.Cliente.Nome" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.DataNascimento" class="form-control" aria-required="true" placeholder="Data Nascimento" />
                    <label asp-for="Input.Cliente.DataNascimento">Data Nascimento</label>
                    <span asp-validation-for="Input.Cliente.DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Cliente.Telemovel" class="form-control" aria-required="true" placeholder="Telemóvel" />
                    <label asp-for="Input.Cliente.Telemovel">Telemóvel</label>
                    <span asp-validation-for="Input.Cliente.Telemovel" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <button id="registerSubmit" type="submit" class="btn btn-primary">Registar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
            var isTreinadorCheckbox = document.getElementById("isTreinadorCheckbox");
            var treinadorFields = document.getElementById("treinadorFields");
            var clienteFields = document.getElementById("clienteFields");

            // Ensure elements are found before attempting to manipulate them
            if (isTreinadorCheckbox && treinadorFields && clienteFields) {
                isTreinadorCheckbox.addEventListener("change", function () {
                    if (isTreinadorCheckbox.checked) {
                        treinadorFields.style.display = "block";
                        clienteFields.style.display = "none";
                    } else {
                        treinadorFields.style.display = "none";
                        clienteFields.style.display = "block";
                    }
                });

                // Initial check to set the correct fields visibility
                if (isTreinadorCheckbox.checked) {
                    treinadorFields.style.display = "block";
                    clienteFields.style.display = "none";
                } else {
                    treinadorFields.style.display = "none";
                    clienteFields.style.display = "block";
                }
            } else {
                console.error("One or more elements not found.");
            }
    </script>
}

